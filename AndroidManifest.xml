<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khello.fantasyandroidapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.khello.fantasyandroidapp.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.khello.fantasyandroidapp.PoolsPageActivity"
            android:label="@string/title_activity_pools_page" >
        </activity>
        <activity
            android:name="com.khello.fantasyandroidapp.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.khello.fantasyandroidapp.MatchupPageActivity"
            android:label="@string/title_activity_matchup_page" >
        </activity>
        <activity
            android:name="com.khello.fantasyandroidapp.MatchupTabsActivity"
            android:label="@string/title_activity_matchup_tabs" >
        </activity>
        <activity
            android:name="com.khello.fantasyandroidapp.PicksTabActivity"
            android:label="@string/title_activity_picks_tab" >
        </activity>
        <activity
            android:name="com.khello.fantasyandroidapp.ResultsTabActivity"
            android:label="@string/title_activity_results_tab" >
        </activity>
        <activity
            android:name="com.khello.fantasyandroidapp.PlayerMainActivity"
            android:label="@string/title_activity_player_main" >
        </activity>
    </application>

</manifest>
